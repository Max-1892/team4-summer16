<!DOCTYPE html>
<html>
<head>
  <title>Final Project | Assignment 8 | Todo App</title>
  <%= stylesheet_link_tag 'application', media: 'all'%>
  <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>

<% if logged_in? %>
	<div style="float: right;">
		<%= link_to "Home", root_path %> | You are logged in as: <%= link_to "#{current_user.account.first_name}", account_path(current_user.account.id) %> | <%= link_to "Logout", logout_path, data: {method: :delete} %>
	</div>
<% end %>

<% flash.each do |key, value|%>
  <%= content_tag :p, value, id: key %>
<% end %>
<%= yield %>

</body>
</html>
